<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_entrust_title"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/pop_pro_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/shape_entrust_title"
            android:padding="5dp"
            android:textColor="@color/hint_orange"
            android:textSize="@dimen/title"
            tools:text="test" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/hint_orange" />

        <TextView
            android:id="@+id/pop_pro_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/hint_orange"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            tools:text="test" />

        <Button
            android:id="@+id/btn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_gray_bg"
            android:textColor="@color/textBlack"
            android:text="确定"
          />

    </LinearLayout>

</RelativeLayout>
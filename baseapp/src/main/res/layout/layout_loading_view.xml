<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:loading="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#50FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <com.mtm.widget.loading.LoadingView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:padding="10dip"
        loading:inner_color="#ffffff"
        loading:inner_rotating_speed="5"
        loading:inner_width="5dip"
        loading:mode="arc"
        loading:outer_color="#666666"
        loading:outer_width="5dip" />

    <TextView
        android:id="@+id/loading_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在加载数据"
        android:textColor="@color/main_bg" />

</LinearLayout>